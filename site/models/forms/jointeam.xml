<form>
  <fieldset addfieldpath="/administrator/components/com_squadmanagement/models/fields">
    <field
			name="team_id"
			type="hidden"		
                />
    <field
			name="team_name"
			type="text"
                        readonly ="true"
			label="COM_BOOTCAMPLEADERBOARDS_FIELD_JOINTEAM_TEAM_NAME_LABEL"
			description="COM_BOOTCAMPLEADERBOARDS_FIELD_JOINTEAM_TEAM_NAME_DESC"
			size="40"
			class="inputbox"
			required="true"
		/>
    <field
			name="team_join_date"
			type="text"
			label="COM_BOOTCAMPLEADERBOARDS_FIELD_JOINTEAM_JOIN_DATE_LABEL"
			description="COM_BOOTCAMPLEADERBOARDS_FIELD_JOINTEAM_JOIN_DATE_DESC"
			size="40"
                        readonly="true"
			class="inputbox"
			required="true"	
		/>
    <field
			name="team_join_description"
                        type="editor"
                        label="COM_BOOTCAMPLEADERBOARDS_FIELD_JOINTEAM_JOIN_DESCRIPTION_LABEL"
                        description="COM_BOOTCAMPLEADERBOARDS_FIELD_JOINTEAM_JOIN_DESCRIPTION_LABEL"
                        class="inputbox"
                        filter="JComponentHelper::filterText"
                        buttons="true"
                        hide="readmore,pagebreak"
                />
  </fieldset>
</form>
